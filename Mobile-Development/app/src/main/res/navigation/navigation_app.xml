<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_splash"
    app:startDestination="@id/splashFragment">

    <!-- Splash Screen Fragment -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.exotiscanapp.ui.splash.SplashFragment"
        android:label="Splash Screen"
        tools:layout="@layout/fragment_splash_screen">
        <action
            android:id="@+id/action_splashFragment_to_MainActivity"
            app:destination="@id/dashboard_nav" />
        <action
            android:id="@+id/action_splashFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            app:popUpTo="@id/splashFragment" />
    </fragment>

    <!-- Onboarding Fragment (ViewPager) -->
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.example.exotiscanapp.ui.onboarding.viewPagerFragment"
        android:label="Fragment ViewPager"
        tools:layout="@layout/fragment_view_pager">
        <action
            android:id="@+id/action_viewPagerFragment_to_homeFragment"
            app:destination="@id/dashboard_nav" />
    </fragment>

    <!-- Main Navigation -->
    <navigation android:id="@+id/dashboard_nav"
        app:startDestination="@id/mainActivity">

        <!-- Main Activity -->
        <activity
            android:id="@+id/mainActivity"
            android:name="com.example.exotiscanapp.ui.MainActivity"
            android:label="Main Activity"
            tools:layout="@layout/activity_main">
        </activity>
        <fragment
            android:id="@+id/homeScreenFragment"
            android:name="com.example.exotiscanapp.ui.home.HomeScreenFragment"
            android:label="fragment_home_screen"
            tools:layout="@layout/fragment_home_screen" />
        <fragment
            android:id="@+id/historyScreenFragment"
            android:name="com.example.exotiscanapp.ui.history.HistoryScreenFragment"
            android:label="fragment_history_screen"
            tools:layout="@layout/fragment_history_screen" />
        <fragment
            android:id="@+id/profileScreenFragment"
            android:name="com.example.exotiscanapp.ui.profile.ProfileScreenFragment"
            android:label="fragment_profile_screen"
            tools:layout="@layout/fragment_profile_screen" />
        <fragment
            android:id="@+id/quizScreenFragment"
            android:name="com.example.exotiscanapp.ui.quiz.QuizScreenFragment"
            android:label="fragment_quiz_screen"
            tools:layout="@layout/fragment_quiz_screen" />
    </navigation>

</navigation>
